<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity" 
        android:orientation="vertical"
        android:background="@color/GreyBgColor" 
        android:paddingBottom="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/WhiteBgColor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/reg_logo"
            android:layout_width="106dp"
            android:layout_height="105dp"
            android:background="@drawable/logo_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btn_emp_registration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Employee Registration"
            android:textSize="13sp"
            android:textColor="@color/WhiteTextColor"
            android:background="@drawable/emp_reg_button"
            android:textAllCaps="true"
            android:stateListAnimator="@null"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="80dp"/>
        
        <Button
            android:id="@+id/btn_device_registration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Device Registration"
            android:textSize="13sp"
            android:textColor="@color/WhiteTextColor"
            android:background="@drawable/device_reg_button"
            android:textAllCaps="true"
            android:stateListAnimator="@null"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>
        
    </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_layout_reg"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/WhiteTextColor"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp">

            <ProgressBar
                android:id="@+id/progress_bar_main"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait..."
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        
</RelativeLayout>
</ScrollView>